<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/card_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background of the CardView -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Colore di sfondo -->
        </shape>
    </item>

    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Trasparente per mostrare lo sfondo -->
            <stroke android:width="2dp" android:color="@color/colorPrimary"/> <!-- Spessore e colore del bordo -->
            <corners android:radius="20dp"/> <!-- Arrotonda gli angoli -->
        </shape>
    </item>
</layer-list>
